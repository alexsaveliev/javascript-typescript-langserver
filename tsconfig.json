{

    "compilerOptions": {
        "target": "ES5",
        "lib": ["es2016"],
        "types": ["node", "mocha", "chai"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build"
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "exclude": [
        "node_modules"
    ]
}
