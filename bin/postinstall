#!/usr/bin/env node

let fs = require('fs');
let child_process = require('child_process');
let path = require('path');

process.chdir(path.dirname(__dirname));

if (fs.existsSync('./node_modules/vscode/bin/install')) {
	child_process.execSync('node ./node_modules/vscode/bin/install');
} else if (fs.existsSync('../../node_modules/vscode/bin/install')) {
	child_process.execSync('node ../../node_modules/vscode/bin/install');
} else {
	console.log('No vscode directory detected');
	process.exit(1);
}

child_process.exec('./node_modules/.bin/tsc || ../../node_modules/.bin/tsc');
